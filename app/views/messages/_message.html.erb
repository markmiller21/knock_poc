<div class="row">
  <div class="col-lg-12">
    <div class="media">
      <a class="pull-left" href="#">
        <img class="media-object img-circle" src="<%= message.user.avatar_path %>" alt="">
      </a>
      <div class="media-body">
        <h4 class="media-heading"><%= message.user.display_name%>
          <span class="small pull-right"><%= message.created_at.to_time%></span>
        </h4>
        <p><%= message.body%></p>
      </div>
    </div>
  </div>
</div>
<hr>