<div>
  <div class="ind-user-card col-lg-3 col-lg-offset-1 col-md-5 col-md-offset-1 col-sm-5 col-sm-offset-1 col-xs-10 col-xs-offset-1">
    <!-- create a row of 12 columns for each card -->
    <div class="row user-card-home">
      <div class="col-xs-12">
        <!-- image and name row -->
        <div class="col-xs-4">
          <h5 class="knock-text-color"><%= link_to full_name(user), user_path(user.id) %></h5>
          <img class="img-thumbnail home-image-list-image" src="<%=get_user_avatar(user.avatar_path) %>"> 
        </div>


        <!-- information -->
        <div class="col-xs-offset-1 col-xs-7">
          <p><span class="knock-text-color">Call Price: </span>$ <%= user.phone_call_price %></p>
          <p><span class="knock-text-color">Philanthrophic donation: </span><%= user.philanthropy_percent %>%</p>
          <p><span class="knock-text-color">High School: </span><%= user.highschool %></p>
          <p><span class="knock-text-color">High School Tags: </span><%= user.activities %></p>
        </div>

        <br /><br />
      </div>
    </div>
  </div>
</div>
