<div class="row">
  <div class="col-sm-4 col-sm-offset-1">
    <div class="panel panel-default">
      <div class="panel-heading">High School Seniors:</div>
      <div class="panel-body">
        <ul>
          <li>View current students and schedule a call</li>
          <li>Enjoy getting an inside look at the college application process like never before</li>
        </ul>
      </div>
    </div>
  </div>
  <div class="col-sm-4 col-sm-offset-2">
    <div class="panel panel-default">
      <div class="panel-heading">College Students:</div>
      <div class="panel-body">
        <ul>
          <li>Upload your credentials</li>
          <li>Enjoy a passive source of income&nbsp;</li>
        </ul>
      </div>
    </div>
  </div>
</div>


<br/>
<div class="container" id="essays">
  <div class="row">
    <% @essays.each do |user|%>
      <div class="col-md-4 col-md-offset-0 col-sm-offset-0  col-xs-5 col-xs-offset-1 essays">
        <div class="card">
          <%=link_to user_path(user) do %>
              <img class="card-img-top" src="<%=get_user_avatar user.avatar_path.url%>">
          <%end%>

          <div class="card-block">
            <h4 class="card-title"><%= link_to user.display_name, user_path(user) %></h4>
            <h5 class="card-title"><%= user.college %></h5>
            <h5 class="card-title"><%= user.major %></h5>
          </div>
        </div>
      </div>
    <%end%>
  </div>
  <%= paginate @essays %>
</div>