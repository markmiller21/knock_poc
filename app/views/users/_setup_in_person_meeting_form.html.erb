<%=form_for @meeting, url: '', remote: true do |f| %>
    <%= debug @meeting %>
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <h4 class="modal-title" id="myModalLabel">Set up a meeting with <%=@essay.display_name%></h4>
    </div>
    <div class="modal-body">
      <% @meeting.errors.full_messages.each do |m| %>
          <%=show_errors(m).html_safe%>
      <%end%>
      <div class="row">
        <div class="col-md-12">
          <div class="form-group">
            <label for="exampleInputPassword1">Meeting Time</label>
            <%=f.text_field :meeting_time, value: DateTime.now.strftime("%Y-%m-%d %H:%M:%S"),  placeholder: DateTime.now.strftime("%Y-%m-%d %H:%M:%S"), class: "form-control in_person_meeting", readonly: true%>
          </div>
        </div>
      </div>
    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
      <%=f.submit "Set up", class: "btn btn-success"%>
    </div>
<%end%>

<script>
    $(function() {
        $('.in_person_meeting').datetimepicker({
            dateFormat: 'yy-mm-dd',
            timeFormat: 'HH:mm:ss'
        });
    });
</script>